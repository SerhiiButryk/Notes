<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_big"
            android:layout_marginBottom="@dimen/margin_top_small"
            android:gravity="center"
            android:text="@string/block_title"
            android:textColor="@color/authorize_screen_text_color"
            android:textSize="@dimen/title_size_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_border_layout"
            android:layout_marginTop="@dimen/padding_border_layout"
            android:layout_marginEnd="@dimen/padding_border_layout"
            android:layout_marginBottom="@dimen/padding_border_layout"
            android:gravity="start"
            android:paddingStart="@dimen/padding_small"
            android:paddingEnd="@dimen/padding_small"
            android:text="@string/block_message"
            android:textColor="@color/authorize_screen_text_color"
            android:textSize="@dimen/message_size_text" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_border_layout"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/padding_border_layout"
            android:layout_marginBottom="8dp"
            android:paddingStart="@dimen/padding_small"
            android:paddingEnd="@dimen/padding_small"
            android:textColorHint="@color/authorize_screen_text_color">

            <EditText
                android:id="@+id/access_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:focusable="true"
                android:hint="@string/block_hint"
                android:inputType="textPassword"
                android:textColor="@color/authorize_screen_text_color"
                android:textSize="18sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_login"
            style="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="36dp"
            android:background="@drawable/button_background"
            android:padding="12dp"
            android:text="@string/kbtn_ok"
            android:textColor="@color/white" />

    </LinearLayout>

</layout>