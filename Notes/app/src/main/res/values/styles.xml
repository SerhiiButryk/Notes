<?xml version="1.0" encoding="UTF-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="NotesNoActionBarTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="SettingsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="LoginTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_contrast</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/blue_accent</item>
    </style>

    <style name="NotesThemeDark" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="NotesThemeLight" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/round_sheet_background</item>
    </style>

    <style name="BottomSheetTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="colorPrimary">@color/blue_contrast</item>
        <item name="colorPrimaryDark">@color/blue_contrast</item>
        <item name="colorAccent">@color/blue_accent</item>
    </style>

    <style name="NoteTextStyle">
        <item name="android:background">@drawable/text_background</item>
        <item name="android:fontFamily">@font/crete_round</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="TextStyle">
        <item name="android:fontFamily">@font/crete_round</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="LoginButtonStyle">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/authorize_screen_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginStart">@dimen/margin_edges</item>
        <item name="android:layout_marginLeft">@dimen/margin_edges</item>
        <item name="android:layout_marginEnd">@dimen/margin_edges</item>
        <item name="android:layout_marginRight">@dimen/margin_edges</item>
    </style>

    <style name="LoginTextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/authorize_screen_text_color</item>
        <item name="android:textSize">@dimen/title_size_text</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:layout_marginStart">@dimen/margin_edges_textview</item>
        <item name="android:layout_marginLeft">@dimen/margin_edges_textview</item>
        <item name="android:layout_marginEnd">@dimen/margin_edges_textview</item>
        <item name="android:layout_marginRight">@dimen/margin_edges_textview</item>
    </style>

    <style name="LoginInputTextView" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/authorize_screen_text_color</item>
        <item name="android:visibility">gone</item>
        <item name="android:textColorHint">@color/authorize_screen_text_color</item>
        <item name="android:layout_marginStart">@dimen/margin_edges_input_textview</item>
        <item name="android:layout_marginLeft">@dimen/margin_edges_input_textview</item>
        <item name="android:layout_marginEnd">@dimen/margin_edges_input_textview</item>
        <item name="android:layout_marginRight">@dimen/margin_edges_input_textview</item>
    </style>

    <style name="LoginEditText">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textColor">@color/authorize_screen_text_color</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
