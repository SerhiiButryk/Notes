<?xml version="1.0" encoding="UTF-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="ThemeSettings" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="AppLoginTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_contrast</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/blue_accent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/round_sheet_background</item>
    </style>

    <style name="BottomSheetTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="colorPrimary">@color/blue_contrast</item>
        <item name="colorPrimaryDark">@color/blue_contrast</item>
        <item name="colorAccent">@color/blue_accent</item>
    </style>

    <style name="noteTextStyle">
        <item name="android:background">@drawable/text_background</item>
        <item name="android:fontFamily">@font/crete_round</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="textStyle">
        <item name="android:fontFamily">@font/crete_round</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
